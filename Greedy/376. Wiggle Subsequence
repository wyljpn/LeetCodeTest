class Solution:
    def wiggleMaxLength(self, nums):
        
        result = 1
        
        if len(nums) == 1:
            return result
        
        preDiff = 0
        
        for i in range(len(nums)-1):
            curDiff = nums[i+1] - nums[i]
            
            if curDiff * preDiff <= 0 and curDiff != 0:
                result += 1
                preDiff = curDiff
        
        return result
        
